<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_start_training"
    tools:context="com.example.evelina.befit.StartTrainingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:id="@+id/cord"
    android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/Button_start_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        app:fabSize="normal"
        android:elevation="6dp"
        app:borderWidth="0dp"
        android:backgroundTint="@color/colorPrimary"
        android:visibility="visible"
        android:src="@drawable/ic_play_arrow_white_24dp"
        app:layout_anchor="@id/recycler_view_start"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        app:layout_anchorGravity="bottom|right|end"
    />

</android.support.design.widget.CoordinatorLayout>

    </LinearLayout>


</FrameLayout>
