<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play_exercise"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.evelina.befit.PlayExerciseActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:background="@drawable/rectangle_green_with_white_line"
        android:layout_height="wrap_content">
        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtube_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Sets"
                android:id="@+id/set_TV"
                android:textSize="22sp"
                android:textColor="@color/green"
                android:gravity="center"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:textSize="22sp"
                android:id="@+id/sets_num"
                android:textColor="@color/green"
                android:gravity="center"
                android:layout_weight="1"
                android:hint="num sets"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/green"
                android:textSize="22sp"
                android:id="@+id/repeat_TV"
                android:text="Repeats"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textColor="@color/green"
                android:gravity="center"
                android:hint="num reps"
                android:id="@+id/repeat_num"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/green"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            android:id="@+id/exercise_name_TV"/>
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/green"
            android:text="description"
            android:id="@+id/description_TV"
            android:layout_weight="2"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/green"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/points_TV"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:text="done"
            android:textAllCaps="true"
            android:background="@drawable/rectangle_green"
            android:textColor="@android:color/white"
            android:id="@+id/button_completed"

            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>