<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play_exercise"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.evelina.befit.PlayExerciseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtube_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">
            <EditText
                android:layout_margin="16dp"
                android:text="Sets"
                android:textColor="@color/colorPrimary"
                android:layout_width="0dp"
                android:gravity="center"
                android:textSize="23sp"
                android:layout_weight="2"
                android:clickable="false"
                android:focusable="false"
                android:layout_height="wrap_content"
                android:id="@+id/textView" />
            <EditText
                android:layout_width="0dp"
                android:layout_margin="16dp"
                android:hint="num"
                android:id="@+id/sets_num"
                android:textColor="@color/colorPrimary"
                android:textSize="23sp"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="false"
                android:focusable="false"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">
            <EditText
                android:layout_margin="16dp"
                android:text="Repeats"
                android:textColor="@color/colorPrimary"
                android:layout_width="0dp"
                android:gravity="center"
                android:textSize="23sp"
                android:layout_weight="2"
                android:clickable="false"
                android:focusable="false"
                android:layout_height="wrap_content"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_margin="16dp"
                android:hint="num"
                android:id="@+id/repeat_num"
                android:textColor="@color/colorPrimary"
                android:textSize="23sp"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="false"
                android:focusable="false"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:hint="num"
                android:drawableRight="@drawable/ic_star_black_18dp"
                android:id="@+id/points_num"
                android:textColor="@color/colorPrimary"
                android:textSize="23sp"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="false"
                android:focusable="false"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <!--TODO the color of the button  -->
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_info"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="bottom|right"
                android:layout_weight="0.51"
                android:src="@drawable/info"
                android:background="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:background="@drawable/rectangle_green"
                android:id="@+id/button_completed"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/fab_info"
                android:layout_marginLeft="102dp"
                android:layout_marginStart="102dp" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>