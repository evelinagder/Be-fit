<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.evelina.befit.TabbedActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="294dp"
            android:background="@drawable/homescreen"
            android:id="@+id/pic_action_layout"
            android:orientation="horizontal">

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">
                <android.support.design.widget.FloatingActionButton
                android:src="@drawable/ic_show_chart_white_24dp"
                app:fabSize="normal"
                android:layout_gravity="top|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_chart"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
                <android.support.design.widget.FloatingActionButton
                    app:fabSize="normal"
                    android:src="@drawable/ic_pie_chart_white_24dp"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="top|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/show_Piechart"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />


            </android.support.design.widget.CoordinatorLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/username_profile_TV"
                android:textSize="20sp"
                android:layout_marginTop="26dp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="username"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/picture_profile"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_person_white_48dp"
                app:civ_border_width="4dp"
                app:civ_border_color="@android:color/white"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />



        </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/container1"
        android:layout_height="50dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Points"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/points_profile_TV"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:id="@+id/number_points_profile_TV"
            android:layout_weight="1"
            android:focusable="false"
            android:clickable="false"
            android:layout_height="wrap_content"
            android:hint="0"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/container2"
        android:layout_height="54dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Trainings"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/trainings_profile_TV"
            android:layout_weight="1"/>



        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="view"
            android:background="@drawable/rectangle_green"
            android:textColor="@android:color/white"
            android:id="@+id/view_trainings_profile_Button"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:focusable="false"
            android:clickable="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:id="@+id/number_trainings_profile_TV"
            android:layout_height="wrap_content"
            android:hint="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/container3"
        android:layout_height="50dp">

        <TextView
            android:layout_width="0dp"
            android:textSize="18sp"
            android:id="@+id/weight_profile_TV"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="Weight"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:id="@+id/kg_profile_TV"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="match_parent"
            android:hint="in kg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/container4"
        android:layout_height="52dp">

        <TextView
            android:layout_width="0dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:id="@+id/height_profile_TV"
            android:layout_height="match_parent"
            android:text="Height"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:clickable="false"
            android:focusable="false"
            android:layout_weight="1"
            android:id="@+id/meters_profile_TV"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_height="match_parent"
            android:hint="in meters/sm"/>

    </LinearLayout>

</LinearLayout>
    </LinearLayout>

    </LinearLayout>




